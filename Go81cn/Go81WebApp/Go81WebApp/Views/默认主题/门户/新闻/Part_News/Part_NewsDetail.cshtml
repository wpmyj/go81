@model Go81WebApp.Models.数据模型.内容数据模型.新闻
           <style>
               .links:hover{ text-decoration:underline;}
           </style>
<div class="gys_xttz_box">

    <div class="title-base-out">
        <div class="title-base-middle">
            <div class="title-base-inner">新闻详情</div>
        </div>
    </div>
    <div class="gys_xttz_contentbox">
        @if (Model != null)
        {

            <div class="gys_xttz_contentbox_news_title" style="border-bottom:none;">@Model.内容主体.标题</div>
    <div class="gys_xttz_contentbox_news_from" style="border-bottom:1px solid #CCC; height:30px; width:100%;">
        @if (Model.新闻来源 != null)
        {
            if (!string.IsNullOrEmpty(Model.新闻来源.来源名称))
            {
                <span style="padding:0 10px 0 10px;">来源:<a class="links" href="@Model.新闻来源.来源链接" target="_blank">@Model.新闻来源.来源名称</a></span>
            }
            @*if (!string.IsNullOrEmpty(Model.新闻来源.来源链接))
                {
                    <span style="padding:0 10px 0 10px;">
                        来源地址:
                        @if (Model.新闻来源.来源链接.Length > 20)
                        {
                            <a target="_blank" title="@Model.新闻来源.来源链接" href="@Model.新闻来源.来源链接">@Model.新闻来源.来源链接.Substring(0, 20)</a>
                        }
                        else
                        {
                            <a target="_blank" title="@Model.新闻来源.来源链接" href="@Model.新闻来源.来源链接">@Model.新闻来源.来源链接</a>
                        }
                    </span>
                }*@
        }
        @if (!string.IsNullOrEmpty(Model.内容主体.摘要))
        {
            <span style="padding:0 10px 0 10px;">摘要:@Model.内容主体.摘要</span>
        }
        <span style="padding:0 10px 0 10px;">时间:@Model.内容主体.发布时间.ToString("yyyy-MM-dd")</span>
    </div>
            <div class="gys_xttz_contentbox_news_text">
                @Html.Raw(Model.内容主体.内容)
            </div>
        }
        else
        {
            <div class="gys_xttz_contentbox_news_title">暂无此类信息</div>
        }
    </div>

</div>
