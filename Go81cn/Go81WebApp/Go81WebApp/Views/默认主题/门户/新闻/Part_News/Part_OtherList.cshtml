@using Go81WebApp.Models.数据模型.内容数据模型;
<div class="title-base-out">
    <div class="title-base-middle">
        <div class="title-base-inner">最近新闻</div>
    </div>
</div>
<div class="front_newslist_rightdiv" style="margin-top:-5px;">
    <div class="index_content_zcfg_content" style=" width:238px; height:auto; overflow:hidden;" id="tabcontent_zcfg">
        <ul>
            @{ int i = 0;}
            @foreach (var item in (IEnumerable<新闻>)ViewData["新闻列表"])
            {
                TimeSpan ts = DateTime.Now - item.内容主体.发布时间;
                if (i % 2 == 0)
                {
                    <li>
                        @if (ts.TotalHours < 48)
                        {
                            <img style="position: relative; float: left; padding-right: 5px;" src="~/Images/newico.gif" />
                            <a target="_blank" class="new" style="width: 185px; color:red; float:left;" href="~/新闻/NewsDetail?id=@item.Id" title="@item.内容主体.标题">@item.内容主体.标题</a>
                        }
                        else
                        {
                            <a target="_blank" href="~/新闻/NewsDetail?id=@item.Id" title="@item.内容主体.标题">@item.内容主体.标题</a>
                        }
                    </li>
                }
                else
                {
                    <li class="oddlinecolor_exp">
                        @if (ts.TotalHours < 48)
                        {
                            <img style="position: relative; float: left; padding-right: 5px;" src="~/Images/newico.gif" />
                            <a target="_blank" class="new" style="width:185px; color:red; float:left;" href="~/新闻/NewsDetail?id=@item.Id" title="@item.内容主体.标题">@item.内容主体.标题</a>
                        }
                        else
                        {
                            <a target="_blank" href="~/新闻/NewsDetail?id=@item.Id" title="@item.内容主体.标题">@item.内容主体.标题</a>
                        }
                    </li>
                }
                i++;
            }
        </ul>

    </div>
</div>
