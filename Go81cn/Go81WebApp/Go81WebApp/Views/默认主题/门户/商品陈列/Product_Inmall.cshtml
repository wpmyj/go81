            });
        }).bind("mouseout", function () {
            $(this).css({
                "border": "1px solid #ccc",
                "padding": "2px"
            });
    });

    $("#purchase_num").blur(function () {
        var $this = $(this);
        var val = $this.val();
        var reg = /^[1-9]+[0-9]*]*$/;
        if (val != null && val != "") {
            if (!reg.test(val)) {
                val = parseInt(val);
                if (val == 0) {
                    val = 1;
                }
            }
        } else {
            val = 1;
        }
        $this.val(val);
    });
