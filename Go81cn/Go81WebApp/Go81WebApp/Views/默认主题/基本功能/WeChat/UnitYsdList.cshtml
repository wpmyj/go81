@using Go81WebApp.Models.数据模型.项目数据模型
@model IEnumerable<验收单>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>验收单管理</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
</head>
<body>
    <div>
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped">
                <tr>
                    <th>序号</th>
                    <th>验收单号</th>
                    <th>审核状态</th>
                    <th>操作</th>
                </tr>
                @for (int i = 1; i <= Model.Count(); i++)
                {
                    <tr>
                        <td>@i</td>
                        <td>@Model.ElementAt(i - 1).验收单号</td>
                        <td>
                            @if (Model.ElementAt(i - 1).审核数据.审核状态 == Go81WebApp.Models.数据模型.审核状态.未审核)
                            {
                                <span style="color:red;">@Model.ElementAt(i - 1).审核数据.审核状态</span>
                            }
                            else
                            {
                                <span>@Model.ElementAt(i - 1).审核数据.审核状态</span>
                            }
                        </td>
                        @if (Model.ElementAt(i - 1).审核数据.审核状态 == Go81WebApp.Models.数据模型.审核状态.未审核)
                        {
                            <td><a class="btn btn-sm btn-warning" href="/WeChat/YsdDetail?id=@Model.ElementAt(i - 1).Id&openid=@ViewData["openid"]&a=1">查看详情</a></td>
                        }
                        else
                        {
                            <td><a class="btn btn-sm btn-warning" href="/WeChat/YsdDetail?id=@Model.ElementAt(i - 1).Id&openid=@ViewData["openid"]">查看详情</a></td>   
                        }
                    </tr>

                }
            </table>



            <ul class="pagination">


                @{
                int Pagecount = int.Parse(ViewData["Pagecount"].ToString());
                int CurrentPage = int.Parse(ViewData["CurrentPage"].ToString());
                if (Pagecount <= 6)
                {
                    for (int i = 1; i <= Pagecount; i++)
                    {
                        if (CurrentPage == i)
                        {
                            <li class="active"><a href='/WeChat/UnitYsdlist?page=@i&openid=@ViewData["openid"]'>@i</a></li>
                        }
                        else
                        {
                            <li><a href='/WeChat/UnitYsdlist?page=@i&openid=@ViewData["openid"]'>@i</a></li>
                        }
                    }
                    if (Pagecount != 0)
                    {
                        <li><span>@(CurrentPage)/@(Pagecount) 页</span></li>
                    }
                }
                else
                {
                    if (CurrentPage < 6)
                    {
                        if (CurrentPage != 1)
                        {
                            <li><a href="/WeChat/UnitYsdUnit?page=@(CurrentPage-1)&openid=@ViewData["openid"]">上一页</a></li>
                            for (int i = 1; i < 7; i++)
                            {
                                if (CurrentPage == i)
                                {
                                    <li class="active"><a href='/WeChat/UnitYsdlist?page=@i&openid=@ViewData["openid"]'>@i</a></li>
                                }
                                else
                                {
                                    <li><a href='/WeChat/UnitYsdlist?page=@i&openid=@ViewData["openid"]'>@i</a></li>
                                }
                            }
                            <li><span>...</span></li>
                            <li><a href="/WeChat/UnitYsdlist?page=@(Pagecount)&openid=@ViewData["openid"]">@Pagecount</a></li>
                            <li><a href="/WeChat/UnitYsdlist?page=@(CurrentPage+1)&openid=@ViewData["openid"]">下一页</a></li>
                            <li><span>@(CurrentPage)/@(Pagecount) 页</span></li>
                        }
                        else
                        {
                            for (int i = 1; i < 7; i++)
                            {
                                if (CurrentPage == i)
                                {
                                    <li class="active"><a href='/WeChat/UnitYsdlist?page=@i&openid=@ViewData["openid"]'>@i</a></li>
                                }
                                else
                                {
                                    <li><a href='/WeChat/UnitYsdlist?page=@i&openid=@ViewData["openid"]'>@i</a></li>
                                }
                            }
                            <li><span>...</span></li>
                            <li><a href="/WeChat/UnitYsdlist?page=@(Pagecount)&openid=@ViewData["openid"]">@Pagecount</a></li>
                            <li><a href="/WeChat/UnitYsdlist?page=@(CurrentPage+1)&openid=@ViewData["openid"]">下一页</a></li>
                            <li><span>@(CurrentPage)/@(Pagecount) 页</span></li>
                        }
                    }
                    else if (CurrentPage >= 6 && CurrentPage < Pagecount - 3)
                    {
                        <li><a href="/WeChat/UnitYsdlist?page=@(CurrentPage-1)&openid=@ViewData["openid"]">上一页</a></li>
                        <li><a href="/WeChat/UnitYsdlist?page=1&openid=@ViewData["openid"]">1</a></li>
                        <li><span>...</span></li>
                        for (int i = (CurrentPage - 4 + 1); i <= CurrentPage + 1; i++)
                        {
                            if (CurrentPage == i)
                            {
                                <li class="active"><a href='/WeChat/UnitYsdlist?page=@i&openid=@ViewData["openid"]'>@i</a></li>
                            }
                            else
                            {
                                <li><a href='/WeChat/UnitYsdlist?page=@i&openid=@ViewData["openid"]'>@i</a></li>
                            }
                        }
                        <li><span>...</span></li>
                        <li><a href="/WeChat/UnitYsdlist?page=@(Pagecount)&openid=@ViewData["openid"]">@Pagecount</a></li>
                        <li><a href="/WeChat/UnitYsdlist?page=@(CurrentPage+1)&openid=@ViewData["openid"]">下一页</a></li>
                        <li><span>@(CurrentPage)/@(Pagecount) 页</span></li>
                    }
                    else if (CurrentPage >= Pagecount - 3)
                    {
                        <li><a href="/WeChat/UnitYsdlist?page=@(CurrentPage-1)&openid=@ViewData["openid"]">上一页</a></li>
                        <li><a href="/WeChat/UnitYsdlist?page=1?openid=@ViewData["openid"]">1</a></li>
                        <li><span>...</span></li>
                        for (int i = Pagecount - 6 + 1; i <= Pagecount; i++)
                        {
                            if (CurrentPage == i)
                            {
                                <li class="active"><a href='/WeChat/UnitYsdlist?page=@i&openid=@ViewData["openid"]'>@i</a></li>
                            }
                            else
                            {
                                <li><a href='/WeChat/UnitYsdlist?page=@i&openid=@ViewData["openid"]'>@i</a></li>
                            }
                        }
                        <li><span>@(CurrentPage)/@(Pagecount) 页</span></li>
                    }
                }
                }
            </ul>


        }
        else
        {
            <div class="container-fluid">
                <span class="errormessage">暂无验收单信息！</span>
            </div>
        }

    </div>
    <script src="~/JS/jquery-2.0.3.min.js"></script>
</body>
</html>
