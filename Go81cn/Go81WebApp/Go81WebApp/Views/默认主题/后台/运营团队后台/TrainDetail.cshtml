@model Go81WebApp.Models.数据模型.内容数据模型.培训资料
@{
    ViewBag.Title = "培训资料详情";
    Layout = "_BackLayout.cshtml";
}
<style>
    .link_btn:hover{
 text-decoration:underline;
    }
</style>
<div class="bg_outdiv">
    <div class="bg_outdiv_left">
        @Html.Action("LeftMenu", "布局")
    </div>
    <div class="bg_outdiv_right">
        <div class="title-base-out">
            <div class="title-base-middle">
                <div class="title-base-inner">培训资料详情</div>
            </div>
        </div>
        <div class="gys_znxx_box">
            <div class="gys_xttz_contentbox">
                <div class="gys_xttz_contentbox_news_title">@Html.DisplayFor(model => model.内容主体.标题)</div>

                <div class="gys_xttz_contentbox_news_from">
                    @if (Model.信息来源!= null)
                    {
                        if (!string.IsNullOrEmpty(Model.信息来源.来源名称))
                        {
                            <span style="padding:0 10px 0 10px;">来源:<a target="_blank" title="@Model.信息来源.来源链接" href="@Model.信息来源.来源链接">@Model.信息来源.来源名称</a></span>
                        }
                    }
                    <span style="padding:0 10px 0 10px;">时间:@Model.内容主体.发布时间.ToString("yyyy-MM-dd")</span>
                </div>
                <div class="gys_xttz_contentbox_news_text">
                    @Html.Raw(Model.内容主体.内容)
                </div>
                <table style="margin-left:20px;" width="100%" cellspacing="0" cellpadding="0">
                    @if (Model.内容主体.附件 != null && Model.内容主体.附件.Count() != 0)
                    {
                        <tr><td align="left"><h3>附件：</h3></td></tr>
                        foreach (var item in Model.内容主体.附件)
                        {
                            if (System.IO.File.Exists(Server.MapPath(@item)))
                            {
                                <tr>
                                    <td><a class="link_btn" href="@item">@item.Split('/')[item.Split('/').Length - 1]</a></td>
                                </tr>
                            }
                        }
                    }
                </table>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#业务培训列表").addClass("left_menu_select").children("a").css({ "color": "#fff" });
        $("#业务培训列表").parents().attr("show", "true").show().prev("li").addClass("open").children("span").css({ "background": "url('../Images/tree_icons.png') -115px -4px" });
    });
</script>