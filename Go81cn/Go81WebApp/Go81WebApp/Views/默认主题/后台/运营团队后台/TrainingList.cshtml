@model IEnumerable<Go81WebApp.Models.数据模型.内容数据模型.培训资料>
@{
    ViewBag.Title = "培训资料列表"; 
    Layout = "_BackLayout.cshtml";
}
<style>
    td span {
        font-size: 12px;
        color: red;
    }
</style>
<link href="~/css/index.css" rel="stylesheet" />
<script type="text/javascript" src="http://api.map.baidu.com/api?key=&v=1.2&services=true"></script>
<div class="bg_outdiv">
    <div class="bg_outdiv_left">
        @Html.Action("LeftMenu", "布局")
    </div>
    <div style="margin-bottom:50px;" class="bg_outdiv_right">
        <div class="title-base-out">
            <div class="title-base-middle">
                <div class="title-base-inner">培训资料列表</div>
            </div>
        </div>
        <div class="gys_znxx_content">
            @if (Model == null || Model.Count() == 0)
            {
                <span>暂时没有培训资料</span>
            }
            else
            {
                <table width="100%" cellpadding="0" cellspacing="0">
                    <tr><th width="40%">标题</th><th width="20%">来源</th><th width="15%">发布时间</th><th width="25%" colspan="3">操作</th></tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.内容主体.标题</td>
                            <td><a href="@item.信息来源.来源链接" target="_blank">@item.信息来源.来源名称</a></td>
                            <td>@item.内容主体.发布时间.ToString("yyyy-MM-dd")</td>
                            <td align="center"><a target="_blank" href="/运营团队后台/TrainDetail?id=@item.Id">详情</a></td>
                            <td align="center"><a target="_blank" href="/运营团队后台/TrainingModify?id=@item.Id">修改</a></td>
                            <td align="center"><a onclick="del(@item.Id)">删除</a></td>
                        </tr>
                    }
                </table>
            }
            <div class="gys_znxx_content_detailbox">
                @{
                    if (Model.Count() != 0)
                    {
                        int Pagecount = int.Parse(ViewData["Pagecount"].ToString());
                        int CurrentPage = int.Parse(ViewData["CurrentPage"].ToString());
                        if (Pagecount > 0 && CurrentPage != 1)
                        {
                            <a href='/运营团队后台/TrainingList?page=1'>首页</a><a href='/运营团队后台/TrainingList?page=@(CurrentPage-1)'>上一页</a>
                        }
                        if (Pagecount <= 6)
                        {
                            for (int i = 1; i <= Pagecount; i++)
                            {
                                if (CurrentPage == i)
                                {
                                    <a style="border:1px solid red;" href='/运营团队后台/TrainingList?page=@i'>@i</a>
                                }
                                else
                                {
                                    <a href='/运营团队后台/TrainingList?page=@i'>@i</a>
                                }
                            }
                        }
                        else
                        {
                            if (CurrentPage < 6)
                            {
                                if (CurrentPage != 1)
                                {
                                    for (int i = 1; i < 7; i++)
                                    {
                                        if (CurrentPage == i)
                                        {
                                            <a style="border:1px solid red;" href='/运营团队后台/TrainingList?page=@i'>@i</a>
                                        }
                                        else
                                        {
                                            <a href='/运营团队后台/TrainingList?page=@i'>@i</a>
                                        }
                                    }
                                    <span>...</span><a href="/运营团队后台/TrainingList?page=@(Pagecount)">@Pagecount</a>
                                }
                                else
                                {
                                    for (int i = 1; i < 7; i++)
                                    {
                                        if (CurrentPage == i)
                                        {
                                            <a style="border:1px solid red;" href='/运营团队后台/TrainingList?page=@i'>@i</a>
                                        }
                                        else
                                        {
                                            <a href='/运营团队后台/TrainingList?page=@i'>@i</a>
                                        }
                                    }
                                    <span>...</span><a href="/运营团队后台/TrainingList?page=@(Pagecount)">@Pagecount</a>
                                }
                            }
                            else if (CurrentPage >= 6 && CurrentPage < Pagecount - 3)
                            {
                                <a href="/运营团队后台/TrainingList?page=1">1</a><span>...</span>
                                for (int i = (CurrentPage - 4 + 1); i <= CurrentPage + 1; i++)
                                {
                                    if (CurrentPage == i)
                                    {
                                        <a style="border:1px solid red;" href='/运营团队后台/TrainingList?page=@i'>@i</a>
                                    }
                                    else
                                    {
                                        <a href='/运营团队后台/TrainingList?page=@i'>@i</a>
                                    }
                                }
                                <span>...</span><a href="/运营团队后台/TrainingList?page=@(Pagecount)">@Pagecount</a>
                            }
                            else if (CurrentPage >= Pagecount - 3)
                            {
                                <a href="/运营团队后台/TrainingList?page=1">1</a><span>...</span>
                                for (int i = Pagecount - 6 + 1; i <= Pagecount; i++)
                                {
                                    if (CurrentPage == i)
                                    {
                                        <a style="border:1px solid red;" href='/运营团队后台/TrainingList?page=@i'>@i</a>
                                    }
                                    else
                                    {
                                        <a href='/运营团队后台/TrainingList?page=@i'>@i</a>
                                    }
                                }
                            }
                        }
                        if (Pagecount > 0)
                        {
                            if (CurrentPage < Pagecount)
                            {
                                <a href="/运营团队后台/TrainingList?page=@(CurrentPage+1)">下一页</a><a href="/运营团队后台/TrainingList?page=@Pagecount">末页</a>
                            }
                            <span>第@(CurrentPage)页/共@(Pagecount)页</span>
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" language="javascript">
    function del(num) {
        if (confirm("点击确定即将删除此消息！确定删除吗？")) {
            window.location = "/运营团队后台/DelTrain?id=" + num;
        }
    }
    $(function () {
        $("#业务培训列表").addClass("left_menu_select").children("a").css({ "color": "#fff" });
        $("#业务培训列表").parents().attr("show", "true").show().prev("li").addClass("open").children("span").css({"background":"url('../Images/tree_icons.png') -115px -4px"});
    });
</script>
