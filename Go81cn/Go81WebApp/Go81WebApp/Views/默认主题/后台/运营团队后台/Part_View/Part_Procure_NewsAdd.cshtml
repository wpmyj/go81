       'anchor', 'link', 'unlink', '|', 'about'
            ],
            resizeType: 0
        });

        $("#modiibutton").click(function () {
            if (editor.html() == null || editor.html() == "") {
                $("#tips").css("display", "block");
                $("#tips img").remove();
