                            </div>
                        </div>
                    </div>
                }
                <textarea id="deletattachtext" name="deletattachtext" style=" width:500px; height:200px; display:none;"></textarea>
                <textarea id="attachtext" name="attachtext" style=" width: 500px; height: 200px; display:none;">@if (Model.内容主体.图片 != null && Model.内容主体.图片.Count > 0){foreach (var item in Model.内容主体.图片){@(item + "|")}}</textarea>
                <div style="text-align:center;"><input id="modiibutton" name="submitcontent" type="submit" @*onclick="return checkcontent();"*@ style="margin-top:20px;" class="front_login_rightbox_button" value="确    定"></div>
                <script type="text/javascript">
                    function checkcontent() {
                        editor.sync("content");
                        if (document.getElementById("content").value.replace(/(^\s*)|(\s*$)/g, "") == "") {
                            $("#contenerror").html("内容必须填写");
                            return false;
                        }
                        else {
                            $("#contenerror").html("");
                            return true;
                        }
                    }
                </script>
                }
                else
                {
                    <div class="procureinputdiv_title">暂无此类信息</div>
                }
            </div>
        </div>
    </div>
}
