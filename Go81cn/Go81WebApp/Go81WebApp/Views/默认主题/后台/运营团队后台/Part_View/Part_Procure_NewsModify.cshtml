                            <div class="arrow"></div>
                            <div class="con_box">请填写新闻来源名称</div>
                    </div>
                </div>
                </div>

                    <div class="procureinputdiv">
                        <div class="procureinputdiv_title">来源链接：</div>
                        <div class="procure_formlistdiv">
                            @Html.EditorFor(model => model.新闻来源.来源链接)
