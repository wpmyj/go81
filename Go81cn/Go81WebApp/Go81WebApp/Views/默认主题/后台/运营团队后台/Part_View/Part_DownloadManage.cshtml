
@using Go81WebApp.Models.数据模型.内容数据模型;
<div class="title-base-out">
    <div class="title-base-middle">
        <div class="title-base-inner">下载列表</div>
    </div>
</div>
<div class="gys_znxx_box">
    <div class="gys_znxx_contentbox">
        <div class="gys_znxx_content">
            <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                    <th width="50%">标题</th>
                    <th width="10%">类型</th>
                    <th width="10%">验证码</th>
                    <th width="10%">时间</th>
                    <th width="10%">操作</th>
                </tr>
                @{
                    IEnumerable<下载> model=ViewData["后台下载列表"] as IEnumerable<下载>;
                }
                @foreach (var item in model)
                {
                    <tr>
                        <td><a href="~/运营团队后台/DownloadDetail?id=@item.Id" target="_blank">@item.内容主体.标题</a></td>
                        @if (item.下载类型 == 下载类型.普通)
                        {
                            <td>@item.下载类型</td>
                        }
                        else
                        {
                             <td style="color: red;">@item.下载类型</td>
                        }
                        <td>@item.下载验证码</td>
                        <td>@item.基本数据.修改时间.ToString("yyyy.MM.dd")</td>
                        <td class="gys_znxx_content_tabletime">@Html.ActionLink("修改", "DownloadModify", new { id = item.Id })|
                        <a onclick="del(@item.Id)">删除</a>
                        </td>
                    </tr>
                }
            </table>
            <div class="gys_znxx_content_detailbox">
                @{
                    if (model.Count() != 0)
                    {
                        int Pagecount = int.Parse(ViewData["Pagecount"].ToString());
                        int CurrentPage = int.Parse(ViewData["CurrentPage"].ToString());
                        if (Pagecount > 0 && CurrentPage != 1)
                        {
                            <a href='/运营团队后台/DownloadManage?page=1'>首页</a><a href='/运营团队后台/DownloadManage?page=@(CurrentPage-1)'>上一页</a>
                        }
                        if (Pagecount <= 6)
                        {
                            for (int i = 1; i <= Pagecount; i++)
                            {
                                if (CurrentPage == i)
                                {
                                    <a style="border:1px solid red;" href='/运营团队后台/DownloadManage?page=@i'>@i</a>
                                }
                                else
                                {
                                    <a href='/运营团队后台/DownloadManage?page=@i'>@i</a>
                                }
                            }
                        }
                        else
                        {
                            if (CurrentPage < 6)
                            {
                                if (CurrentPage != 1)
                                {
                                    for (int i = 1; i < 7; i++)
                                    {
                                        if (CurrentPage == i)
                                        {
                                            <a style="border:1px solid red;" href='/运营团队后台/DownloadManage?page=@i'>@i</a>
                                        }
                                        else
                                        {
                                            <a href='/运营团队后台/DownloadManage?page=@i'>@i</a>
                                        }
                                    }
                                    <span>...</span><a href="/运营团队后台/DownloadManage?page=@(Pagecount)">@Pagecount</a>
                                }
                                else
                                {
                                    for (int i = 1; i < 7; i++)
                                    {
                                        if (CurrentPage == i)
                                        {
                                            <a style="border:1px solid red;" href='/运营团队后台/DownloadManage?page=@i'>@i</a>
                                        }
                                        else
                                        {
                                            <a href='/运营团队后台/DownloadManage?page=@i'>@i</a>
                                        }
                                    }
                                    <span>...</span><a href="/运营团队后台/DownloadManage?page=@(Pagecount)">@Pagecount</a>
                                }
                            }
                            else if (CurrentPage >= 6 && CurrentPage < Pagecount - 3)
                            {
                                <a href="/运营团队后台/DownloadManage?page=1">1</a><span>...</span>
                                for (int i = (CurrentPage - 4 + 1); i <= CurrentPage + 1; i++)
                                {
                                    if (CurrentPage == i)
                                    {
                                        <a style="border:1px solid red;" href='/运营团队后台/DownloadManage?page=@i'>@i</a>
                                    }
                                    else
                                    {
                                        <a href='/运营团队后台/DownloadManage?page=@i'>@i</a>
                                    }
                                }
                                <span>...</span><a href="/运营团队后台/DownloadManage?page=@(Pagecount)">@Pagecount</a>
                            }
                            else if (CurrentPage >= Pagecount - 3)
                            {
                                <a href="/运营团队后台/DownloadManage?page=1">1</a><span>...</span>
                                for (int i = Pagecount - 6 + 1; i <= Pagecount; i++)
                                {
                                    if (CurrentPage == i)
                                    {
                                        <a style="border:1px solid red;" href='/运营团队后台/DownloadManage?page=@i'>@i</a>
                                    }
                                    else
                                    {
                                        <a href='/运营团队后台/DownloadManage?page=@i'>@i</a>
                                    }
                                }
                            }
                        }
                        if (Pagecount > 0)
                        {
                            if (CurrentPage < Pagecount)
                            {
                                <a href="/运营团队后台/DownloadManage?page=@(CurrentPage+1)">下一页</a><a href="/运营团队后台/DownloadManage?page=@Pagecount">末页</a>
                            }
                            <span>第@(CurrentPage)页/共@(Pagecount)页</span>
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function del(num)
    {
        if(confirm("点击确定即将删除此消息！确定删除吗？"))
        {
            window.location="/运营团队后台/DownloadDelete?id="+num;
        }
    }
    $(function () {
        $("#下载管理").addClass("left_menu_select").children("a").css({ "color": "#fff" });
        $("#下载管理").parents().attr("show", "true").show().prev("li").addClass("open").children("span").css({ "background": "url('../Images/tree_icons.png') -115px -4px" });
    });
</script>


