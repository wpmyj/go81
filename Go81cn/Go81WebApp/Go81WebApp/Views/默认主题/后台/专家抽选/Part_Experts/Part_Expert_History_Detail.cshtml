@model Go81WebApp.Models.数据模型.用户数据模型.专家
<script src="~/JS/provinceandcity_all.js"></script>
<style type="text/css">
.expert {
        width: 927px;
        height: auto;
        overflow: hidden;
        margin-top: 5px;
        padding: 10px;
        border: 1px solid #aaa;
        font-size:14px;
    }
.expert p{background:#7BAFA5;font-weight:bold; text-indent:2em; height:30px; line-height:30px;}
.expert table {border:1px solid #aaa; border-bottom:none; border-right:none;}
.expert_identity table tr td{ width:300px;height:30px; text-indent:10px;border-bottom:1px solid #aaa;border-right:1px solid #aaa;}
.expert_identity table tr td input{width:180px;}
.expert_identity table tr td select{width:185px; text-align:center;}
.expert_identity table tr td.lab{width:150px; text-align:right; padding-right:5px;}
.expert textarea{width:638px;height:100px;}
.tabletable tr td.lac{ width:90px; text-align:right; border:none}
.tabletable tr td.lad{ width:264px; border:none;}
.expert span{ font-size:12px; color:red;}
.expert img{width:200px;height:150px;}
</style>
<div class="expert">


    <!--身份信息-->
    <p class="title">身份信息</p>
    <div class="expert_identity">
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td class="lab">姓名</td>
                <td>@Model.身份信息.姓名</td>
                <td class="lab">性别</td>
                <td>@Model.身份信息.性别</td>
                
            </tr>
           <tr>
               <td class="lab">民族</td>
               <td>@Model.身份信息.民族</td>
               <td class="lab">出生年月</td>
               <td>@Model.身份信息.出生年月.ToString("yyyy-MM-dd")</td>
               
           </tr>
           <tr>
               <td class="lab">政治面貌</td>
              <td>@Model.身份信息.政治面貌</td>
               <td class="lab">评审专家类型</td>
               <td>@Model.身份信息.专家类型</td>
           </tr>
            <tr>
                <td class="lab">所在地区</td>
                <td>@Model.所属地域.地域</td>
                <td class="lab">评审专家类别</td>
                <td>@Model.身份信息.专家类别</td>
            </tr>
            <tr>
                @*<td class="lab">证件类型</td>
                <td>@Model.身份信息.证件类型</td>*@
                <td class="lab">身份证号</td>
                <td>@Model.身份信息.证件号</td>
            </tr>
            <tr>
                <td class="lab" valign="top">证件电子扫描件</td>
                <td>
                    <img src="@Model.身份信息.证件电子扫描件" alt="证件电子扫描件" />
                </td>
                <td class="lab" valign="top">本人照片电子扫描件</td>
                <td><img src="@Model.身份信息.本人照片电子扫描件" alt="本人照片电子扫描件" /></td>
            </tr>
        </table>
    </div>

   <!--学历信息-->

    <p>学历信息</p> 
    <div class="expert_identity">
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td class="lab">毕业院校</td>
                <td>@Model.学历信息.毕业院校</td>
                <td class="lab">专业技术职称</td>
                <td>@Model.学历信息.专业技术职称</td>
            </tr>
            <tr>
                <td class="lab">最高学历</td>
                <td>@Model.学历信息.最高学历</td>
                <td class="lab">最高学位</td>
                <td>@Model.学历信息.最高学位</td>
            </tr>
            <tr>
                <td class="lab" valign="top">取得现技术职称时间</td>
                <td valign="top">@Model.学历信息.取得现技术职称时间.ToString("yyyy-MM-dd")</td>
                <td class="lab" valign="top">职称证书电子扫描件</td>
                <td><img src="@Model.学历信息.职称证书电子扫描件" alt="职称证书电子扫描件" /></td>
            </tr>
        </table>
    </div> 

    <!--工作经历-->

    <p>工作经历</p>
    <div class="expert_identity">
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td class="lab">参加工作时间</td>
                <td>@Model.工作经历信息.参加工作时间.ToString("yyyy-MM-dd")</td>
                <td class="lab">从事专业</td>
                <td>@Model.工作经历信息.从事专业</td>
            </tr>
            <tr>
                <td class="lab">从事专业起始年度</td>
                <td>@Model.工作经历信息.从事专业起始年度</td>
                <td class="lab">工作单位</td>
                <td>@Model.工作经历信息.工作单位</td>
            </tr>
            <tr>
                <td class="lab">健康状况</td>
                <td>@Model.工作经历信息.健康状况</td>
                <td class="lab">现任职务</td>
                <td>@Model.工作经历信息.现任职务</td>
            </tr>
            <tr>
                <td class="lab">单位地址</td>
                <td colspan="3">
                    <table class="tabletable" cellpadding="0" cellspacing="0" style="border:none;">
                        <tr>
                            <td class="lac">地址类型</td>
                            <td class="lad">@Model.工作经历信息.单位地址.地址类型</td>
                            <td class="lac">联系人</td>
                            <td class="lad">@Model.工作经历信息.单位地址.联系人</td>
                        </tr>
                        <tr>
                            <td class="lac">手机</td>
                            <td class="lad">@Model.工作经历信息.单位地址.手机</td>
                            <td class="lac">固定电话</td>
                            <td class="lad">@Model.工作经历信息.单位地址.固定电话</td>
                        </tr>
                        <tr>
                            <td class="lac">电子邮件</td>
                            <td class="lad">@Model.工作经历信息.单位地址.电子邮件</td>
                            <td class="lac">省份</td>
                            <td class="lad">@Model.工作经历信息.单位地址.省份</td>
                        </tr>
                        <tr>
                            <td class="lac">城市</td>
                            <td class="lad">@Model.工作经历信息.单位地址.城市</td>
                            <td class="lac">区县</td>
                            <td class="lad">@Model.工作经历信息.单位地址.区县</td>
                        </tr>
                        <tr>
                            <td class="lac">街道</td>
                            <td class="lad">@Model.工作经历信息.单位地址.街道</td>
                            <td class="lac">邮政编码</td>
                            <td class="lad">@Model.工作经历信息.单位地址.邮政编码</td>
                        </tr>
                    </table>
                </td>
                
            </tr>
            <tr>
                <td class="lab">主要工作经历</td>
                <td colspan="3">@Model.工作经历信息.主要工作经历</td>
            </tr>
            <tr>
                <td class="lab">社会兼聘职情况</td>
                <td colspan="3">@Model.工作经历信息.社会兼聘职情况</td>
            </tr>
            <tr>
                <td class="lab">本人参加过何种项目招标及评标</td>
                <td colspan="3">@Model.工作经历信息.本人参加过何种项目招标及评标</td>
            </tr>
            <tr>
                <td class="lab">本人专业领域研究及成果</td>
                <td colspan="3">@Model.工作经历信息.本人专业领域研究及成果</td>
            </tr>
        </table>
    </div>
</div>