@model Go81WebApp.Models.数据模型.用户数据模型.专家
@{
    ViewBag.Title = "修改个人信息";
    Layout = "_BackLayout.cshtml";
}
<link href="~/css/css.css" rel=" stylesheet" />
<link href="~/css/Msg_Tips.css" rel="stylesheet" />
<div class="bg_outdiv">
    <div class="bg_outdiv_left">
        @Html.Action("LeftMenu", "布局")
    </div>
    <div class="bg_outdiv_right">
        <div style="width:920px; margin-top:14px; border-bottom:2px solid #3C890F;">修改个人信息</div>
        <div style="font-size:16px;margin-top:30px; width:90%; margin-left:auto; margin-right:auto;margin-top:30px;">
            @using (Html.BeginForm("Modify", "专家后台", FormMethod.Post))
            {
                <table>
                    <tr>
                        <td>联系电话：</td>
                        <td>@Html.TextBoxFor(m => m.联系方式.手机)</td>
                    </tr>
                    <tr><td  align="center" colspan="2"><input type="submit" id="submit_btn" value="提交" /></td></tr>
                </table>
            }
            </div>
        </div>
    </div>
<script type="text/javascript">
    $(function () {
        $("#修改个人信息").css({ "background": "#537E2B" }).children("a").css({ "color": "#fff" });
        $("#修改个人信息").parents().attr("show", "true").show().prev("li").addClass("open").children("span").css({"background":"url('../Images/tree_icons.png') -115px -4px"});
    });
</script>
