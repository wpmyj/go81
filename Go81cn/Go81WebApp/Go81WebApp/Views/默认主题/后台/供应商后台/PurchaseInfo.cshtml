                                @if (ViewData["status"].ToString() == "1")
                                {
                                <span>已付款</span><span id="orderstatus"></span>
                                }
                                else if (ViewData["status"].ToString() == "0")
                                {
                                <span>未付款</span><span id="orderstatus"></span>
