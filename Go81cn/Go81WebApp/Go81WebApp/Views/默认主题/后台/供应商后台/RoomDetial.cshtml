@using Go81WebApp.Models.数据模型
@{
    ViewBag.Title = "酒店房间信息";
    Layout = "_BackLayout.cshtml";
}
<link rel="stylesheet" href="~/css/index.css" type="text/css">
<style type="text/css">
.roomdetial{ margin:30px auto;background:#fff;}
    .roomdetial tr td.align{text-align:right;width:120px;font-size:14px;}
    .roomdetial tr{ line-height:30px;}
    .roomdetial tr td input[type="checkbox"]{ vertical-align:middle;}
    .roomdetial tr td textarea{width:635px;height:80px;}
    .roomdetial tr td.wid{width:305px; text-align:left;}
    .roomdetial tr td.wid span{color:red;font-size:12px;}
</style>
<div class="bg_outdiv">
    <div class="bg_outdiv_left">
        @Html.Action("LeftMenu", "布局")
    </div>
    <div class="bg_outdiv_right">
        <div class="gys_xttz_topbox">
            <div class="gys_xttz_topbg">
                <div class="index_bottom_zb_top_title">酒店房间信息</div>
            </div>
        </div>
        <div class="gys_znxx_box">
            <div class="gys_ztbsearch_contentbox" style="margin:0 auto 0">
                @{
                    酒店._房间信息 room = ViewData["房间信息"] as 酒店._房间信息;
                }
                <table class="roomdetial">
                    <tr>
                        <td class="align">房型：</td>
                        <td class="wid">
                            @room.房型
                        </td>
                        <td class="align">价格：</td>
                        <td class="wid">
                            @room.价格
                        </td>
                    </tr>
                    <tr>
                        <td class="align">床型：</td>
                        <td class="wid">
                            @room.床型
                        </td>
                        <td class="align">早餐：</td>
                        <td class="wid">
                            @room.早餐
                        </td>
                    </tr>
                    <tr>
                        <td class="align">房间设施：</td>
                        <td colspan="3" class="wid" style="font-size:12px;color:black">
                           @if(room.房间设施.吹风机)
                           {
                               <input type="checkbox" disabled="disabled" checked="checked" /><small>吹风机</small>
                           }
                           @if(room.房间设施.二十四小时热水)
                           {
                            <input type="checkbox" disabled="disabled" checked="checked" /><small>二十四小时热水</small>
                           }
                           @if(room.房间设施.国际长途通话)
                           {
                            <input type="checkbox" disabled="disabled" checked="checked" /><small>国际长途通话</small>
                           }
                           @if(room.房间设施.空调)
                           {
                            <input type="checkbox" disabled="disabled" checked="checked" /><small>空调</small>
                           }
                           @if(room.房间设施.宽带上网)
                           {
                            <input type="checkbox" disabled="disabled" checked="checked" /><small>宽带上网</small>
                           }
                           @if(room.房间设施.免费国内长途通话)
                           {
                            <input type="checkbox" disabled="disabled" checked="checked" /><small>免费国内长途通话</small>
                           }
                           @if(room.房间设施.免费市内电话)
                           {
                            <input type="checkbox" disabled="disabled" checked="checked" /><small>免费市内电话</small>
                           }
                           @if(room.房间设施.暖气)
                           {
                            <input type="checkbox" disabled="disabled" checked="checked" /><small>暖气</small>
                           }
                        </td>
                    </tr>
                    <tr>
                        <td class="align" valign="top">简介：</td>
                        <td colspan="3" class="wid">
                            @room.简介
                        </td>
                    </tr>

                    <tr>
                        <td class="align" valign="top">房间图片：</td>
                        <td colspan="3" class="wid">
                            @for(int k=0;k<room.图片.Count;k++)
                            {
                                <img style="width:116px;height:100px;" src="@room.图片[k]" />
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <script>
            $(document).ready(function () {
                $("#酒店房间管理").css({ "background": "#537E2B" }).children("a").css({ "color": "#fff" });
                $("#酒店房间管理").parents().attr("show", "true").show().prev("li").addClass("open").children("span").css({"background":"url('../Images/tree_icons.png') -115px -4px"});
            });
        </script>
    </div>
</div>
