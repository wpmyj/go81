            $(".xz :radio").click(function () { proper = $(this).val(); });
        });
    $("#bt").click(function () {
        kw = $(":text#k").val();
        $.get('/供应商后台/getDT',
               { a: cator, b: proper, c: $("select#by").val(), d: $("select#bm").val(), e: $("select#bd").val(), f: $("select#ey").val(), g: $("select#em").val(), h: $("select#ed").val(), i: kw },
