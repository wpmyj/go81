@using Go81WebApp.Models.数据模型.项目数据模型;
<div class="gys_znxx_topbox">
    <div class="gys_xttz_topbg">
        <div class="index_bottom_zb_top_title">招标采购预报名列表</div>
    </div>
</div>
<div class="gys_znxx_box">
    <div class="gys_znxx_contentbox">
        <div class="gys_znxx_content">
            <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                    <th width="30%">项目名称</th>
                    <th width="20%">项目编号</th>
                    <th width="7%">报名数</th>
                    <th width="7%">状态</th>
                    <th width="7%">标书</th>
                    <th width="12%">时间</th>
                    <th width="17%">操作</th>
                </tr>
                @{
                    IEnumerable<招标采购预报名> model=ViewData["预报名列表"] as IEnumerable<招标采购预报名>;
                }
                @if(!model.Any())
                {
                    <tr><td colspan="7">暂时没有采购预报名信息</td></tr>
                }
                @foreach (var item in model)
                {
                    <tr>
                        <td><a href="~/单位用户后台/SignUp_Detail?id=@item.Id" target="_blank">@item.所属公告链接.公告.项目信息.项目名称</a></td>
                        <td><a href="~/单位用户后台/SignUp_Detail?id=@item.Id" target="_blank">@item.所属公告链接.公告.项目信息.项目编号</a></td>
                        <td><a href="~/单位用户后台/SignUp_Detail?id=@item.Id" target="_blank">@item.预报名供应商列表.Count</a></td>
                        @if (item.预报名已关闭)
                        {
                            <td>已关闭</td>
                        }
                        else
                        {
                            <td style="color:red;">进行中</td>
                        }
                        @if (item.标书信息 != null &&  item.标书信息.内容.Any())
                        {
                            <td style="color:red;">已上传</td>
                        }
                        else
                        {
                            <td>未上传</td>
                        }
                        
                        <td>@item.基本数据.添加时间.ToString("yyyy.MM.dd")</td>
                        <td>@*<a href="~/单位用户后台/SignUp_Information?id=@item.Id" target="_blank">所需资料管理</a>*@<a href="~/单位用户后台/SignUp_BiaoShu?id=@item.Id" target="_blank">标书管理</a><a href="~/单位用户后台/SignUp_Detail?id=@item.Id" target="_blank">详情</a><a onclick="del(@item.Id)">删除</a></td>
                    </tr>
                }
            </table>
            <div class="gys_znxx_content_detailbox">
                @{
                    if (model.Count() != 0)
                    {
                        int Pagecount = int.Parse(ViewData["Pagecount"].ToString());
                        int CurrentPage = int.Parse(ViewData["CurrentPage"].ToString());
                        if (Pagecount > 0 && CurrentPage != 1)
                        {
                            <a href='/单位用户后台/Recommend_GysList?page=1'>首页</a><a href='/单位用户后台/Recommend_GysList?page=@(CurrentPage-1)'>上一页</a>
                        }
                        if (Pagecount <= 6)
                        {
                            for (int i = 1; i <= Pagecount; i++)
                            {
                                if (CurrentPage == i)
                                {
                                    <a style="border:1px solid red;" href='/单位用户后台/Recommend_GysList?page=@i'>@i</a>
                                }
                                else
                                {
                                    <a href='/单位用户后台/Recommend_GysList?page=@i'>@i</a>
                                }
                            }
                        }
                        else
                        {
                            if (CurrentPage < 6)
                            {
                                if (CurrentPage != 1)
                                {
                                    for (int i = 1; i < 7; i++)
                                    {
                                        if (CurrentPage == i)
                                        {
                                            <a style="border:1px solid red;" href='/单位用户后台/Recommend_GysList?page=@i'>@i</a>
                                        }
                                        else
                                        {
                                            <a href='/单位用户后台/Recommend_GysList?page=@i'>@i</a>
                                        }
                                    }
                                    <span>...</span><a href="/单位用户后台/Recommend_GysList?page=@(Pagecount)">@Pagecount</a>
                                }
                                else
                                {
                                    for (int i = 1; i < 7; i++)
                                    {
                                        if (CurrentPage == i)
                                        {
                                            <a style="border:1px solid red;" href='/单位用户后台/Recommend_GysList?page=@i'>@i</a>
                                        }
                                        else
                                        {
                                            <a href='/单位用户后台/Recommend_GysList?page=@i'>@i</a>
                                        }
                                    }
                                    <span>...</span><a href="/单位用户后台/Recommend_GysList?page=@(Pagecount)">@Pagecount</a>
                                }
                            }
                            else if (CurrentPage >= 6 && CurrentPage < Pagecount - 3)
                            {
                                <a href="/单位用户后台/Recommend_GysList?page=1">1</a><span>...</span>
                                for (int i = (CurrentPage - 4 + 1); i <= CurrentPage + 1; i++)
                                {
                                    if (CurrentPage == i)
                                    {
                                        <a style="border:1px solid red;" href='/单位用户后台/Recommend_GysList?page=@i'>@i</a>
                                    }
                                    else
                                    {
                                        <a href='/单位用户后台/Recommend_GysList?page=@i'>@i</a>
                                    }
                                }
                                <span>...</span><a href="/单位用户后台/Recommend_GysList?page=@(Pagecount)">@Pagecount</a>
                            }
                            else if (CurrentPage >= Pagecount - 3)
                            {
                                <a href="/单位用户后台/Recommend_GysList?page=1">1</a><span>...</span>
                                for (int i = Pagecount - 6 + 1; i <= Pagecount; i++)
                                {
                                    if (CurrentPage == i)
                                    {
                                        <a style="border:1px solid red;" href='/单位用户后台/Recommend_GysList?page=@i'>@i</a>
                                    }
                                    else
                                    {
                                        <a href='/单位用户后台/Recommend_GysList?page=@i'>@i</a>
                                    }
                                }
                            }
                        }
                        if (Pagecount > 0)
                        {
                            if (CurrentPage < Pagecount)
                            {
                                <a href="/单位用户后台/Recommend_GysList?page=@(CurrentPage+1)">下一页</a><a href="/单位用户后台/Recommend_GysList?page=@Pagecount">末页</a>
                            }
                            <span>第@(CurrentPage)页/共@(Pagecount)页</span>
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        $("#招标采购预报名列表").css({ "background": "#537E2B" }).children("a").css({ "color": "#fff" });
        $("#招标采购预报名列表").parents().attr("show", "true").show().prev("li").addClass("open").children("span").css({"background":"url('../Images/tree_icons.png') -115px -4px"});
    });
    function del(num)
    {
        if(confirm("点击确定即将删除此预报名！确定删除吗？"))
        {
            window.location="/单位用户后台/SignUp_Delete?id="+num;
        }
    }
</script>

