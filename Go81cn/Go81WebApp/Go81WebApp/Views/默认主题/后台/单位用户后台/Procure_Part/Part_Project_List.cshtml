@using Go81WebApp.Models.数据模型.项目数据模型;
@using Go81WebApp.Models.数据模型
<div class="gys_znxx_topbox">
    <div class="gys_xttz_topbg">
        <div class="index_bottom_zb_top_title">我的项目需求申请列表</div>
    </div>
</div>
<div class="gys_znxx_box">
    <div class="gys_znxx_contentbox">
        <div class="gys_znxx_content">
            <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                    <th width="40%">需求申请标题</th>
                    <th width="15%">审核状态</th>
                    <th width="15%">最后修改时间</th>
                    <th width="30%">操作</th>
                </tr>
                @foreach (var item in (IEnumerable<招标采购项目>)ViewData["我的申请列表"])
                {
                    <tr>
                        <td><a href="~/单位用户后台/Project_Detail?id=@item.Id" target="_blank">@item.需求申请来源.需求申请.标题</a></td>
                        @if (item.审核数据.审核状态 == 审核状态.审核未通过)
                        {
                            <td style="color:red;">@item.审核数据.审核状态</td>
                        }
                        else if (item.审核数据.审核状态 == 审核状态.未审核)
                        {
                            <td style="color:blue;">@item.审核数据.审核状态</td>
                        }
                        else
                        {
                            <td>@item.审核数据.审核状态</td>
                        }
                        <td>@item.基本数据.修改时间.ToString("yyyy.MM.dd")</td>
                        @if (item.审核数据.审核状态 != 审核状态.审核通过)
                        {
                            <td class="gys_znxx_content_tabletime">@Html.ActionLink("查看进度", "Project_ViewProgress", new { id = item.Id})|@Html.ActionLink("详情", "Project_Detail", new { id = item.Id})|@Html.ActionLink("修改", "Project_Modify", new { id = item.Id})|@Html.ActionLink("删除", "Project_Delete", new { id = item.Id, link = "list" })</td>
                        }
                        else
                        {
                            <td class="gys_znxx_content_tabletime">@Html.ActionLink("查看进度", "Project_ViewProgress", new { id = item.Id})|@Html.ActionLink("详情", "Project_Detail", new { id = item.Id})</td>
                        }
                    </tr>
                }
            </table>
            <div class="gys_znxx_content_detailbox">
                @(Html.Pager("page", int.Parse(ViewData["pagesize"].ToString()), int.Parse(ViewData["listcount"].ToString())))
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" language="javascript">
    @{
        int pages = int.Parse(ViewData["listcount"].ToString())/int.Parse(ViewData["pagesize"].ToString());
        if (int.Parse(ViewData["listcount"].ToString())%int.Parse(ViewData["pagesize"].ToString()) > 0)
        {
            pages++;
        }
    }
    var num =@(int.Parse(ViewData["page"].ToString()));
    var j=@pages
    $(document).ready(function () {
        $(".gys_znxx_content_detailbox a").each(function () {
            if ($(this).text() == num) {
                $(this).css("border","1px solid #ff0000");
            }
            if (num == j) {
                $(".gys_znxx_content_detailbox a:last").addClass("endPage");
            }
            if (num == 1) {
                $(".gys_znxx_content_detailbox a:first").addClass("endPage");
            }
        });
        $("#我的需求列表").addClass("left_menu_select").children("a").css({ "color": "#fff" });
        $("#我的需求列表").parents().attr("show", "true").show().prev("li").addClass("open").children("span").css({"background":"url('../Images/tree_icons.png') -115px -4px"});
    });
</script>

