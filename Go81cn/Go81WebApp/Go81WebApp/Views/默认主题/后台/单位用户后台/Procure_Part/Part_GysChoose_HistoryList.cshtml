@using Go81WebApp.Models.数据模型

<div class="title-base-out">
    <div class="title-base-middle">
        <div class="title-base-inner">历史抽选供应商列表</div>
    </div>
</div>
<div class="gys_znxx_box">
    <div class="gys_znxx_contentbox">
        <div class="gys_znxx_content">
            <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                    <th width="25%">项目名称</th>
                    <th width="20%">项目编号</th>
                    <th width="15%">经办人</th>
                    <th width="20%">评标时间</th>
                    <th width="20%">操作</th>
                </tr>
                @{
                    IEnumerable<供应商抽选记录> hisrecord = ViewData["历史抽选供应商列表"] as IEnumerable<供应商抽选记录>;
                    if (hisrecord != null && hisrecord.Any())
                    {
                        foreach (var i in hisrecord)
                        {
                            <tr>
                                <td>@i.项目名称</td>
                                <td>@i.项目编号</td>
                                @if (i.经办人 != null && i.经办人.用户数据 != null && i.经办人.用户数据.联系方式 != null && !string.IsNullOrWhiteSpace(i.经办人.用户数据.联系方式.联系人))
                                {
                                    <td>@i.经办人.用户数据.联系方式.联系人</td>
                                }
                                else
                                {
                                    <td>未填写</td>
                                }
                                <td>@i.评标时间.ToString()</td>
                                <td>
                                    <a href="GysChoose_HistoryDetail?id=@i.Id" target="_blank">查看抽选结果</a>|
                                    <a href="Gys_Choose_Print?id=@i.Id" target="_blank">打印名单</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">暂无历史抽选供应商</td>
                        </tr>
                    }
                }

            </table>
            <div class="gys_znxx_content_detailbox">
                @(Html.Pager("page", int.Parse(ViewData["pagesize"].ToString()), int.Parse(ViewData["listcount"].ToString())))
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" language="javascript">
    @{
        int pages = int.Parse(ViewData["listcount"].ToString())/int.Parse(ViewData["pagesize"].ToString());
        if (int.Parse(ViewData["listcount"].ToString())%int.Parse(ViewData["pagesize"].ToString()) > 0)
        {
            pages++;
        }
    }
    var num =@(int.Parse(ViewData["page"].ToString()));
    var j=@pages
    $(document).ready(function () {
        $(".gys_znxx_content_detailbox a").each(function () {
            if ($(this).text() == num) {
                $(this).addClass("currentPage");
            }
            if (num == j) {
                $(".gys_znxx_content_detailbox a:last").addClass("endPage");
            }
            if (num == 1) {
                $(".gys_znxx_content_detailbox a:first").addClass("endPage");
            }
        });
        $("#供应商历史抽取记录").addClass("left_menu_select").children("a").css({ "color": "#fff" });
        $("#供应商历史抽取记录").parents().attr("show", "true").show().prev("li").addClass("open").children("span").css({"background":"url('../Images/tree_icons.png') -115px -4px"});
    });
</script>

