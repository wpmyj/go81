                                            foreach (var temp in item.专家类型)
                                            {
                                                <span>@temp ,</span>
                                            }
                                        }
                                        else
                                        {
                                            <span>不限</span>
                                        }
                                    </td>
                                    <td style="display:none;">
                                        @if (item.学位要求.Any())
                                        {
                                            foreach (var temp in item.学位要求)
                                            {
                                                <span>@temp ,</span>
                                            }
                                        }
                                        else
                                        {
                                            <span>不限</span>
                                        }
                                    </td>
                                    <td style="display:none;">
                                        @if (item.学历要求.Any())
                                        {
                                            foreach (var temp in item.学历要求)
                                            {
                                                <span>@temp ,</span>
                                            }
                                        }
                                        else
                                        {
                                            <span>不限</span>
                                        }
                                    </td>
                                    <td style="display:none;">@item.描述</td>
                                    <td>@item.需要专家数量</td>
                                    <td><a onclick="showdetailcondition(this);">查看</a></td>

                                </tr>
                            }
                        </table>
                    </div>
